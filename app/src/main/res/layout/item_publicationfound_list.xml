<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemPublicationFound"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_width="180dp"
    android:layout_height="235dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lost_color"
        android:backgroundTint="#E3DAC9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_200"
            android:orientation="vertical">
            <TextView
                android:id="@+id/contextoPublicationFoundText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Perdido"
                android:textStyle="bold">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:elevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/imagePublicacionFound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tipoPublicacionFoundText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="Tipo"
                        android:textSize="12dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/recompensaPublicacionFoundText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:gravity="end"
                        android:textSize="12dp"
                        android:text="$20"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>



                <TextView
                    android:id="@+id/fechaPublicacionFoundText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:textStyle="italic"
                    android:text="Fecha"
                    android:textSize="11sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
