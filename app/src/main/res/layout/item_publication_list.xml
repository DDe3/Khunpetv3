<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemPublication"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@color/found_color"
    android:backgroundTint="@color/found_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:backgroundTint="@color/teal_200"
        android:orientation="vertical">
        <TextView
            android:id="@+id/contextoPublicationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Perdido"
            android:textStyle="bold">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imagePublicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY">

            </ImageView>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tipoPublicacionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="Tipo"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/recompensaPublicacionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="end"
                    android:text="$20"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>



            <TextView
                android:id="@+id/fechaPublicacionText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:textStyle="italic"
                android:text="Fecha"
                android:textSize="11sp">

            </TextView>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>